{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "allowJs": true,
        "module": "es2015",
        "target": "es6",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strictNullChecks": false,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "sourceMap": true,
        "pretty": true
    }
}