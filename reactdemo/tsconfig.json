{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "./",
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        // "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "build"
    ]
}
